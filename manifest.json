{
  "description": "Test des extensions avec une extension qui transforme les caractères de ce que l'on sélectionne en hex et le met dans le presse papier",
  "manifest_version": 2,
  "name": "CopyHex",
  "version": "0.0.0.1",
  "homepage_url": "https://github.com/CodeMathis/extensionUrlToHex",
  "icons": {
    "48": "icons/icon48.png"
  },
  
    "background": {
      "scripts": ["app.js"]
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "copyTextToClipboard"
  ],

"browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }

}
